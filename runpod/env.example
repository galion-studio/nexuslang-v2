# Galion Autonomous Agent System - RunPod Environment Configuration

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# RunPod API Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_POD_ID=
RUNPOD_PUBLIC_IP=

# OpenAI API (Required for LLM capabilities)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret Key (auto-generated if not set)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Database Password
DB_PASSWORD=password

# Redis Password (leave empty for no password)
REDIS_PASSWORD=

# Grafana Admin Password
GRAFANA_PASSWORD=admin

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8010

# Logging
LOG_LEVEL=INFO

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=300

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://galion:password@galion-db:5432/galion

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Redis Connection
REDIS_URL=redis://galion-redis:6379/0

# Redis Settings
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# CORS Credentials
ALLOW_CREDENTIALS=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# TASK PROCESSING SETTINGS
# =============================================================================

# Task Queue Settings
TASK_QUEUE_MAX_SIZE=1000
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=5

# Agent Settings
DEFAULT_AGENT_TIMEOUT=300
MAX_CONCURRENT_AGENTS=10

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================

# Request Limits
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_MAX_RETRIES=3
EXTERNAL_API_RATE_LIMIT=100

# Tool Registry
TOOL_REGISTRY_ENABLED=true
TOOL_CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Upload Configuration
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=txt,md,pdf,py,js,json,yaml,yml

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Webhook Notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# ADVANCED SETTINGS (usually don't need to change)
# =============================================================================

# Server Settings
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Settings
SESSION_SECRET_KEY=change-this-in-production
SESSION_TIMEOUT=3600

# Debug Settings (set to false in production)
DEBUG=false
TESTING=false
DEVELOPMENT=false

# =============================================================================
# RUNPOD SPECIFIC SETTINGS
# =============================================================================

# Resource Limits
CPU_LIMIT=4
MEMORY_LIMIT=8GB
STORAGE_LIMIT=50GB

# Network Settings
NGINX_PORT=80
NGINX_SSL_PORT=443

# Container Settings
DOCKER_REGISTRY=
IMAGE_TAG=latest

# Auto-scaling (future feature)
AUTO_SCALE_ENABLED=false
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=5
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# =============================================================================
# CUSTOM SETTINGS (add your own configurations here)
# =============================================================================

# Add any custom environment variables your deployment needs

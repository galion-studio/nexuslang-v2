# ============================================
# API CONFIGURATION
# ============================================

# LOCAL DEVELOPMENT (default)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# DEVELOPER.GALION.APP (production)
# Uncomment these for developer.galion.app deployment:
# NEXT_PUBLIC_API_URL=https://api.developer.galion.app
# NEXT_PUBLIC_WS_URL=wss://api.developer.galion.app

# NEXUSLANG.GALION.APP (production alternative)
# Uncomment these for nexuslang.galion.app deployment:
# NEXT_PUBLIC_API_URL=https://api.nexuslang.galion.app
# NEXT_PUBLIC_WS_URL=wss://api.nexuslang.galion.app

# RUNPOD DEPLOYMENT
# Replace POD_ID with your actual RunPod pod ID:
# NEXT_PUBLIC_API_URL=https://POD_ID-8000.proxy.runpod.net
# NEXT_PUBLIC_WS_URL=wss://POD_ID-8000.proxy.runpod.net

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_GROKOPEDIA=true
NEXT_PUBLIC_ENABLE_CONTENT_MANAGER=true
NEXT_PUBLIC_ENABLE_ADMIN=true

# ============================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Hotjar (User Behavior Analytics)
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
# NEXT_PUBLIC_HOTJAR_SV=6

# ============================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ============================================
# Stripe (if using for payments instead of Shopify)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# PostHog (Product Analytics)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# APPLICATION SETTINGS
# ============================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Environment name (for display purposes)
NEXT_PUBLIC_ENVIRONMENT=development

# App version (optional)
NEXT_PUBLIC_APP_VERSION=2.0.0

# ============================================
# NOTES
# ============================================
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never put sensitive keys in NEXT_PUBLIC_* variables
# - Update API URLs based on your deployment environment
# - For local development with Docker, use http://backend:8000
# - For local development without Docker, use http://localhost:8000


# NexusLang v2 - RunPod Environment Configuration
# Copy this to .env and fill in your values

# ==================== DATABASE ====================
POSTGRES_USER=nexus
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=nexus_v2
DATABASE_URL=postgresql+asyncpg://nexus:your_secure_postgres_password_here@postgres:5432/nexus_v2

# ==================== REDIS ====================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# ==================== SECURITY ====================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_at_least_32_characters

# Generate with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_at_least_64_characters

# ==================== AI SERVICES ====================
# Required for semantic search and embeddings
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Additional AI providers
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ==================== WHISPER (GPU ACCELERATED) ====================
# Model options: tiny, base, small, medium, large
# Larger = better accuracy but slower
WHISPER_MODEL=base
WHISPER_DEVICE=cuda

# ==================== TTS (GPU ACCELERATED) ====================
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_DEVICE=cuda

# ==================== SHOPIFY (OPTIONAL) ====================
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# ==================== RUNPOD SPECIFIC ====================
RUNPOD_POD_ID=${HOSTNAME}

# These will be auto-configured by RunPod
# Format: https://POD_ID-PORT.proxy.runpod.net
FRONTEND_URL=https://YOUR_POD_ID-3000.proxy.runpod.net
BACKEND_URL=https://YOUR_POD_ID-8000.proxy.runpod.net

# ==================== APPLICATION ====================
DEBUG=false
LOG_LEVEL=info
ENVIRONMENT=production

# Free tier limits
FREE_TIER_CREDITS=100
PRO_TIER_CREDITS=10000
ENTERPRISE_TIER_CREDITS=-1

# ==================== MONITORING (OPTIONAL) ====================
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# ==================== NOTES ====================
# 1. Generate secure passwords for production!
#    Command: openssl rand -hex 32
# 
# 2. Add your OpenAI API key for full functionality
#    Get one at: https://platform.openai.com/api-keys
#
# 3. GPU acceleration is enabled by default
#    Set *_DEVICE=cpu if you want to use CPU only
#
# 4. All data stored in /workspace persists between pod restarts
#
# 5. RunPod provides automatic HTTPS via proxy URLs

